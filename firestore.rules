rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // The admin is the CARES wallet
    function isAdmin(request) {
      return request.auth != null && 
             request.auth.token.wallet_address == '0x8aB0c174F40C5E22b00065C4Cc7b561c299Cad1C';
    }

    // Projects collection - only admin can write, everyone can read
    match /projects/{projectId} {
      allow read: if true;
      allow create, update, delete: if isAdmin(request);
    }
    
    // Donations - users can create their own, admin can read/manage all
    match /donations/{donationId} {
      allow read: if true;
      allow create: if request.auth != null && 
                     request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin(request);
    }
    
    // Care packages - only admin can write, everyone can read
    match /carePackages/{packageId} {
      allow read: if true;
      allow create, update, delete: if isAdmin(request);
    }
    
    // Users - users can manage their own data, admin can manage all
    match /users/{userId} {
      allow read: if true;
      allow create, update: if request.auth != null && 
                            (userId == request.auth.uid || isAdmin(request));
      allow delete: if isAdmin(request);
    }
  }
}